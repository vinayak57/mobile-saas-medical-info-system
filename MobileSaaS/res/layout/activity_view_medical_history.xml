<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@drawable/background">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="#70D0D5D9" >
    
    <TextView
        android:id="@+id/tvMH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View Medical History"
        android:layout_marginTop="10dp"
        android:layout_gravity="center|top"
        android:textSize="23sp"        />
    
    <Button
            android:id="@+id/bMedicalHistory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical history"
            android:layout_marginTop="50dp" 
            android:layout_gravity="left"/>
    
    <Button
            android:id="@+id/bAllergies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Allergies"
            android:layout_marginTop="50dp"
            android:layout_gravity="right" /> 
            
       <Button
            android:id="@+id/bSideEffects"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Side Effects"
            android:layout_marginTop="100dp" 
            android:layout_gravity="right"/>
    
    <Button
            android:id="@+id/bPrecautions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precaustions"
            android:layout_marginTop="100dp"
            android:layout_gravity="left" />

    <TextView
        android:id="@+id/tvDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Large Text"
        android:layout_marginTop="170dp"
        android:layout_gravity="center_horizontal"
        />
    
            </FrameLayout>
</LinearLayout>