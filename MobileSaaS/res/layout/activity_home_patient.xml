<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical"
    android:background="@drawable/background">

     <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:background="#70D0D5D9" >

        <ImageView
            android:id="@+id/ivAppointment"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/calender" />

        <TextView
            android:id="@+id/tvAppointment"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="145dp"
            android:gravity="center"
            android:text="Manage Appointments"
            android:textSize="13sp" />
        
        <ImageView
            android:id="@+id/ivMedical"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="170dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/medical" />
        
        <TextView
            android:id="@+id/tvMedical"
            android:layout_width="87dp"
            android:layout_height="34dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="145dp"
            android:gravity="center"
            android:text="View Medical History"
            android:textSize="13sp" />
        
        <ImageView
            android:id="@+id/ivPrescription"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/prescription" />
        
        <TextView
            android:id="@+id/tvPrescription"
            android:layout_width="82dp"
            android:layout_height="47dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="260dp"
            android:gravity="center"
            android:text="View Prescription"
            android:textSize="13sp" />
        
        <ImageView
            android:id="@+id/ivClinical"
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:layout_marginLeft="175dp"
            android:layout_marginTop="200dp"
            android:src="@drawable/clinical1" />
        
        <TextView
            android:id="@+id/tvClinical"
            android:layout_width="75dp"
            android:layout_height="44dp"
            android:layout_marginLeft="165dp"
            android:layout_marginTop="265dp"
            android:gravity="center"
            android:text="View Clinical Data"
            android:textSize="13sp" />
        
        <ImageView
            android:id="@+id/ivEmergancy"
            android:layout_width="69dp"
            android:layout_height="69dp"
            android:layout_marginLeft="95dp"
            android:layout_marginTop="305dp"
            android:src="@drawable/emergancy" />
        
        <TextView
            android:id="@+id/tvEmergancy"
            android:layout_width="76dp"
            android:layout_height="32dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="375dp"
            android:gravity="center"
            android:text="Emergancy Care"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome, "
            android:textSize="15sp" />
        
        <Button
            android:id="@+id/bSignout"
            android:layout_width="wrap_content"
            android:layout_height="34dp"
            android:layout_gravity="right"
            android:text="Sign Out"
            android:textSize="10sp" />

</FrameLayout>
</LinearLayout>
