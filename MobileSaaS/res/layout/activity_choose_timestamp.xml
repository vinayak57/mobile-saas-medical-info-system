<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

      <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:background="#70D0D5D9" >
        
           <TextView
        android:id="@+id/tvTitleTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_gravity="center_horizontal"
       	android:textSize="24sp"
       	android:layout_marginTop="20dp"
        android:text="Choose Timestamp" />

        <EditText
            android:id="@+id/etTime1"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="90dp"
            android:ems="10"
            android:inputType="date" >  
        </EditText>

        <Button
            android:id="@+id/bDate1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Date"
            android:cropToPadding="true"
             android:layout_marginLeft="170dp"
            android:layout_marginTop="80dp"
            android:onClick="selectDate" />
        
            <EditText
            android:id="@+id/etTime2"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="150dp"
            android:ems="10"
            android:inputType="date" >  
        </EditText>

        <Button
            android:id="@+id/bDate2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick Date"
            android:cropToPadding="true"
             android:layout_marginLeft="170dp"
            android:layout_marginTop="140dp"
            android:onClick="selectDate1" />
        
         <Button
            android:id="@+id/bTimeStampNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next"
            android:cropToPadding="true"
            android:layout_gravity="center_horizontal"
             
            android:layout_marginTop="210dp"
             />
        
        
    </FrameLayout>

</LinearLayout>