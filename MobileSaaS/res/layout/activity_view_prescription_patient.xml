        android:id="@+id/tvDataDrugInstr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     
       	android:textSize="20sp"
       	android:layout_marginLeft="160dp"
       	android:layout_marginTop="270dp"
        android:text="zxfxd" />
         
          
       

</FrameLayout>
</LinearLayout>


