       	android:layout_marginTop="20dp"
        android:text="Prescription" />
       
        <TextView
        android:id="@+id/tvDrugName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_gravity="left"
       	android:textSize="20sp"
       	android:layout_marginLeft="10dp"
       	android:layout_marginTop="70dp"
        android:text="Drug Name :" />
        
         <TextView
        android:id="@+id/tvDataDrugName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	
       	android:textSize="20sp"
       	android:layout_marginLeft="160dp"
       	android:layout_marginTop="70dp"
        android:text="sdgdgd" />
         
      <TextView
        android:id="@+id/tvDrugPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_gravity="left"
       	android:textSize="20sp"
       	android:layout_marginLeft="10dp"
       	android:layout_marginTop="110dp"
        android:text="Power :" />
        
         <TextView
        android:id="@+id/tvDataDrugPower"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	
       	android:textSize="20sp"
       	android:layout_marginLeft="160dp"
       	android:layout_marginTop="110dp"
        android:text="srgdsrg" />
         
         <TextView
        android:id="@+id/tvDrugDose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_gravity="left"
       	android:textSize="20sp"
       	android:layout_marginLeft="10dp"
       	android:layout_marginTop="150dp"
        android:text="Dose :" />
        
         <TextView
        android:id="@+id/tvDataDrugDose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     
       	android:textSize="20sp"
       	android:layout_marginLeft="160dp"
       	android:layout_marginTop="150dp"
        android:text="sfsg" />
         
         <TextView
        android:id="@+id/tvDrugSDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_gravity="left"
       	android:textSize="20sp"
       	android:layout_marginLeft="10dp"
       	android:layout_marginTop="190dp"
        android:text="Start Date :" />
        
         <TextView
        android:id="@+id/tvDataDrugSDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     
       	android:textSize="20sp"
       	android:layout_marginLeft="160dp"
       	android:layout_marginTop="190dp"
        android:text="sgdfg" />
         
         <TextView
        android:id="@+id/tvDrugEDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_gravity="left"
       	android:textSize="20sp"
       	android:layout_marginLeft="10dp"
       	android:layout_marginTop="230dp"
        android:text="End Date :" />
        
         <TextView
        android:id="@+id/tvDataDrugEDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
     
       	android:textSize="20sp"
       	android:layout_marginLeft="160dp"
       	android:layout_marginTop="230dp"
        android:text="gdfgdg" />
         
         <TextView
        android:id="@+id/tvDrugInstr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       	android:layout_gravity="left"
       	android:textSize="20sp"
       	android:layout_marginLeft="10dp"
       	android:layout_marginTop="270dp"
        android:text="Instructions :" />
        
